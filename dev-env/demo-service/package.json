{
  "name": "service-template",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon --ignore build/ --exec ts-node src/index.ts",
    "build": "rm -rf build && tsc",
    "start": "node ./build/index.js",
    "deploy": "NODE_ENV=development nodemon --ignore build/ --exec ts-node src/workflow-deployment.ts",
    "create-instance": "NODE_ENV=development nodemon --ignore build/ --exec ts-node src/workflow-instance.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "zeebe-node": "^0.23.0-alpha.3"
  },
  "devDependencies": {
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.0",
    "typescript": "^3.7.2"
  }
}
